        <Button x:Name="RAMButton" Margin="5,0,5,0" Click="RAMButton_Click" Visibility="{Binding DataModel.RAMVisibility, Mode=OneWay}">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="RAM: " Visibility="{Binding DataModel.LabelTextVisibility, Mode=OneWay}"/>
                <Grid Width="18" Height="{StaticResource GlyphSize}" Visibility="{Binding DataModel.LabelIconVisibility, Mode=OneWay}" Margin="0,0,3,0">
                    <Path Stretch="Fill" Stroke="{DynamicResource {x:Static vs:VsBrushes.StatusBarTextKey}}" StrokeThickness="0.4" Data="{StaticResource RAMGlyph}"/>
                </Grid>
                <TextBlock Text="{Binding DataModel.RAM, Mode=OneWay}"/>
                <TextBlock Text=" / " Visibility="{Binding DataModel.RamSeperatorVisibility, Mode=OneWay}"/>
                <TextBlock Text="{Binding DataModel.TotalRAM, Mode=OneWay}"/>
            </StackPanel>
        </Button>
        <StackPanel x:Name="DiskText" Margin="5,0,5,0" Orientation="Horizontal" Visibility="{Binding DataModel.DiskVisibility, Mode=OneWay}">
            <TextBlock Text="Disk: " Visibility="{Binding DataModel.LabelTextVisibility, Mode=OneWay}"/>
            <Grid Width="15" Height="{StaticResource GlyphSize}" Visibility="{Binding DataModel.LabelIconVisibility, Mode=OneWay}" Margin="0,0,4,0">
                <Path Stretch="Fill" Stroke="{DynamicResource {x:Static vs:VsBrushes.StatusBarTextKey}}" StrokeThickness="0.5" Data="{StaticResource DiskGlyph}"/>
            </Grid>
            <TextBlock Text="{Binding DataModel.Disk, Mode=OneWay}"/>
        </StackPanel>
        <StackPanel x:Name="BatteryText" Margin="5,0,5,0" Visibility="{Binding DataModel.BatteryVisibility, Mode=OneWay}" Orientation="Horizontal">
            <TextBlock Text="Battery: " Visibility="{Binding DataModel.LabelTextVisibility, Mode=OneWay}"/>
            <Grid Width="20" Height="{StaticResource GlyphSize}" Visibility="{Binding DataModel.LabelIconVisibility, Mode=OneWay}">
                <Path Stretch="Fill" Stroke="{DynamicResource {x:Static vs:VsBrushes.StatusBarTextKey}}" StrokeThickness="0.5" Data="{StaticResource BatteryGlyph}"/>
            </Grid>
            <TextBlock Text="{Binding DataModel.BatteryPercent, Mode=OneWay}" Visibility="{Binding DataModel.BatteryPercentVisibility, Mode=OneWay}"/>
            <TextBlock Text="{Binding DataModel.BatteryTime, Mode=OneWay}" Visibility="{Binding DataModel.BatteryTimeVisibility, Mode=OneWay}"/>
        </StackPanel>

        <Popup PlacementTarget="{Binding ElementName=CPUButton}" x:Name="CPUPopup" StaysOpen="False" Placement="Top" Opened="CPUPopup_Opened">
            <local:ProcessPanel x:Name="CPUPanel"/>
        </Popup>

        <Popup x:Name="RAMPopup" PlacementTarget="{Binding ElementName=RAMButton}" StaysOpen="False" Placement="Top" Opened="RAMPopup_Opened">
            <local:RAMPanel x:Name="RAMPanel"/>
        </Popup>
    </StackPanel>
</UserControl>
